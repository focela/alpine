#!/command/with-contenv bash
#
# Timezone configuration script
# Sets the container timezone based on the TIMEZONE environment variable
#

#------------------------------------------------------------------------------------------
# INITIAL SETUP
#------------------------------------------------------------------------------------------
# Import container functions
source /assets/functions/00-container
output_off
PROCESS_NAME="timezone"

#------------------------------------------------------------------------------------------
# TIMEZONE CONFIGURATION
#------------------------------------------------------------------------------------------
# Set container timezone if TIMEZONE variable is provided
if [ -n "${TIMEZONE}" ]; then
    set_timezone "${TIMEZONE}"
fi

# Mark initialization complete
liftoff
output_on
